<div class="banner">
  <div class="container-fluid p-0" style="background-image:url(https://source.unsplash.com/random/1600x400?Banner); height: 400px; background-size:cover;">
    <div class="text-wrapper d-flex align-items-center justify-content-center text-white h-100" style="background: rgba(0, 0, 0, 0.6);>
    <div class="col">
      <div class="row text-center">
        <h2 class=""><%= @list.name %></h2>
      </div>
    </div>
    </div>
  </div>
</div>
<div class="container mt-3">
  <div class="col">
    <div class="row">
      <div class="d-flex flex-row-reverse">
        <%= link_to "Add a movie",  new_list_bookmark_path(@list), class: "btn btn-success p-2" %>
      </div>
    </div>
    <%# Code for Card %>
    <div class="row mt-2">
     <% @list.bookmarks.each do |bookmark| %>
        <div class="col-md-4 mb-4">
          <div class="card h-100">
            <img src="<%= bookmark.movie.poster_url%>" class="card-img-top" alt="house" style="object-fit:cover;">
            <div class="card-body">
              <h5 class="card-title"><%= bookmark.movie.title %></h5>
              <p class="card-text"><%= bookmark.movie.overview %></p>
            </div>
            <%= link_to "Delete", bookmark_path(bookmark) ,data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "ms-3 text-danger" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
